<!--Edit Quiz form-->
<h1 class="mt-3 mb-5 text-center">Edit Quiz</h1>

<%= render 'quiz_errors' %>


<div class="row mt-3">
	<div class="col-md-8 offset-md-2 col-sm-8 offset-sm-2 col-8 offset-2">
		<%= form_for @quiz do |f| %>
		  <div class="form-group">
		    <h4 class="font-weight-normal"><%= f.label :quiz_name%></h5>
		    <%= f.text_field :name, class: "form-control", placeholder: "Enter name for the quiz" %>
		  </div>
		  <div class="form-group"><!--All categories as checkboxes-->
		  	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
		  		<% cb.label(class: "checkbox-inline mr-3") {cb.check_box(class: "checkbox mr-1") + cb.text} %>
		  	<% end %>
		  </div>
		  <%= f.submit class: "btn btn-primary" %>
		<% end %>
	</div>
	<div class="col-md-8 offset-md-2 col-sm-8 offset-sm-2 col-8 offset-2 pl-3 mt-3">
		[ <%= link_to 'Cancel request and return to quiz listing', quizzes_path %> ]
	</div>
</div>