<h1 class="mt-3 mb-5 text-center">Create a Quiz</h1>

<%= render 'quiz_errors' %>


<div class="row mt-3">
	<div class="col-md-8 offset-md-2 col-sm-8 offset-sm-2 col-8 offset-2">
		<%= form_for @quiz do |f| %>
		  <div class="form-group">
		    <h4 class="font-weight-normal"><%= f.label :quiz_name%></h5>
		    <%= f.text_field :name, class: "form-control", placeholder: "Enter name for the quiz" %>
		  </div>
		  <%= f.submit class: "btn btn-primary" %>
		<% end %>
	</div>
	<div class="col-md-8 offset-md-2 col-sm-8 offset-sm-2 col-8 offset-2 pl-3 mt-3">
		[ <%= link_to 'Cancel request and return to quiz listing', quizzes_path %> ]
	</div>
</div>