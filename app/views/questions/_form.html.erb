
<div class="row">
	<div class="ml-3 col-md-10 col-sm-10 col-10">
		<%= form_for @question do |f| %>

			<div class="form-group">

				<h5 class="font-weight-normal"><%= f.label :question %></h5>

				<%= f.text_field :questions, class: "form-control", placeholder: "Enter the question" %>

			</div>

			<div class="form-group">

				<h5 class="font-weight-normal"><%= f.label :score %></h5>

				<%= f.number_field :score, class: "form-control", placeholder: "Score" %>

			</div>
			<%= f.hidden_field :quiz_id, value: @quiz.id %><!--Pass the quiz id to the controller-->

			<p>

				<%= f.submit class: "btn btn-primary" %>

			</p>

		<% end %>
	</div>
</div>